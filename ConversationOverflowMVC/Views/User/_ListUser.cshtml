@using Models.Classes;
@model (List<User> Users, string name)

@functions
{
    public static string ReplaceFirstOccurrence(string Source, string Find, string Replace)
    {
        int Place = Source.IndexOf(Find, StringComparison.OrdinalIgnoreCase);
        string result = Source.Remove(Place, Find.Length).Insert(Place, Replace);
        return result;
    }

    public static string GetFirstOccurence(string Source, string Find)
    {
        int Place = Source.IndexOf(Find, StringComparison.OrdinalIgnoreCase);
        string result = Source.Substring(Place, Find.Length);
        return result;
    }
}

@foreach (User user in Model.Users)
{
    <a href="#" data-userId="@user.Id" class="list-group-item list-group-item-action border-0">
        <!--<div class="badge bg-success float-right">5</div>-->
        <div class="d-flex align-items-start">
            <img src="@user.ImagePath" class="rounded-circle mr-1" alt="Vanessa Tucker" width="40" height="40">
            <div class="flex-grow-1 ml-3">
                @if (Model.name == "")
                {
                    @(user.FirstName + " " + user.LastName)
                }
                else
                {
                    string text = ReplaceFirstOccurrence(user.FirstName + " " + user.LastName, Model.name, "<strong>" + GetFirstOccurence(user.FirstName + " " + user.LastName, Model.name) + "</strong>");
                    Microsoft.AspNetCore.Html.HtmlString html = new Microsoft.AspNetCore.Html.HtmlString(text);

                    @html
                }
                
                <div class="small">@user.Email</div>
                <div class="small"><span class="fas fa-circle chat-online"></span> Online</div>
            </div>
        </div>
    </a>
}