@using Services.Classes;
@model MessageDto

<div id="message_@Model.Message.Id" class="@(Model.Login == User.Identity.Name ? "chat-message-right" : "chat-message-left") pb-4">
    <div>
        <img src="@Model.ImagePath" class="rounded-circle mr-1" alt="Chris Wood" width="40" height="40">
        <div class="text-muted small text-nowrap mt-2">@Model.Message.CreationTime.ToLongTimeString()</div>
    </div>
    <div class="flex-shrink-1 bg-light rounded py-2 px-3 mr-3">
        <div class="font-weight-bold mb-1">@(Model.Login == User.Identity.Name ? "You" : Model.UserName)</div>
        @if (Model.Attachment != null)
        {
            <button id="attachment_@Model.Message.Id" class="btn btn-primary download">
                <i class="fa fa-file" aria-hidden="true"></i>
            </button>
            <span>@Model.Message.Text</span>
        }
        else
        {
            @Model.Message.Text
        }
    </div>
</div>